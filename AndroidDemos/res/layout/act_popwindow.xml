<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:orientation="vertical" > 
 
    <TextView 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="hello" /> 
        
    <Button 
        android:id="@+id/button00" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right"
        android:text="哈哈" />
 
    <Button 
        android:id="@+id/button01" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="以自己为Anchor，不偏移" /> 
 
    <Button 
        android:id="@+id/button02" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="以自己为Anchor，有偏移" /> 
 
    <Button 
        android:id="@+id/button03" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="以屏幕中心为参照，不偏移（正中间）" /> 
 
    <Button 
        android:id="@+id/button04" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="以屏幕下方为参照，下方中间" /> 
        
    <View android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />
        
    <LinearLayout android:id="@+id/ll_menu"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="100dp"
        android:background="#eecccccc"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">
        <Button android:id="@+id/btn_menu1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Menu01"/>
        <Button android:id="@+id/btn_menu2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Menu02"/>
        <Button android:id="@+id/btn_menu3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Menu03"/>
    </LinearLayout>
 
</LinearLayout>